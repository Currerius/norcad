#!/usr/bin/Rscript

ZipName <- paste0(
    gsub(
        " " , "" , c(
                       "./Results" ,
                       sapply( JSON$Survival$Endpoints , with , ShortLabel ) ,
                       sapply( JSON$Survival$Predictors , with , ShortLabel ) ,
                       sapply( JSON$Survival$Modifiers , with , ShortLabel )
                   )
        ) ,
    collapse = "-"
)


system2(
    command = "zip" ,
    args = c(
        "-r" ,
        ZipName ,
        "*.html" , "*.Rdata" , "*.xlsx" , "./figure" ))

